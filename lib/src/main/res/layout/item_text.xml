<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
  <data>
    <variable
        name="item"
        type="com.common.lib.vo.TextViewItem"
        />
  </data>

  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:background="@{item.background}"
      android:gravity="@{item.gravity}"
      android:onClick="@{item::onClick}"
      android:text="@{item.text}"
      android:textColor="@{item.textColor}"
      android:textSize="@{item.textSize}"
      bindHeight="@{item.height}"
      bindWidth="@{item.width}"
      />
</layout>